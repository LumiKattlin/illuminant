generator client {
  provider = "prisma-client"
  output   = "../src/lib/server/prisma"
}

model Post {
  id        String   @id
  title     String
  createdAt DateTime @default(now())
  content   String
  author    String
}

model Draft {
  id      String @id
  title   String
  content String
  author  String
}

model Artist {
  id      String  @id
  name    String
  about   String
  bio     String  @default("")
  color1  String  @default("#000000")
  color2  String  @default("#000000")
  image   String  @default("")
  visible Boolean @default(false)
}

